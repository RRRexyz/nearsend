{
    "compilerOptions": {
        "target": "ES2020", // 编译目标
        "module": "commonjs", // 模块系统
        "outDir": "./dist", // 输出目录
        "rootDir": "./src", // 源代码目录
        "strict": true, // 启用所有严格类型检查
        "esModuleInterop": true, // 允许使用 import/export 语法导入 CommonJS 模块
        "skipLibCheck": true, // 跳过对库文件的类型检查，加快编译速度
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ] // 指定要编译的文件
}